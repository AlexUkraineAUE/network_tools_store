<div class="cell">
  <div class="card">
    <div class="card-header">
      <p class="card-header-title">
        <% if show_link %>
          <%= link_to product.name, product %>
        <% else %>
          <%= product.name %>
        <% end %>
      </p>
    </div>

    <div class="card-content">
      <p class="content">Category: <%= link_to product.category.name, product.category %></p>
    
      <p class="content">
        Description: <%= product.description %>
      </p>
      <p class="content">
        Price: <%= number_to_currency(product.price) %>
      </p>
      <% if product.discounted_price.present? %>
        <p class="content">Discounted Price: <%= number_to_currency(product.discounted_price) %></p>
      <% end %>

      <div class="card-image">
        <% if product.image.attached? %>
          <div class="card-image">
            <figure class="image">
              <%= image_tag product.image %>
            </figure>
          </div>
        <% end %>
      </div>

      <%= form_with url: checkout_create_path do |form| %>
        <%= hidden_field_tag(:product_id, product.id) %>
        <div class="field">
          <%= form.label :quantity, "Quantity:" %>
          <%= form.number_field :quantity, value: 1, min: 1, max: 100 %>
        </div>
        <%= button_tag 'Buy Now ðŸ’³' %>
      <% end %>
    </div>
  </div>
</div>