<h1>Shopping Cart</h1>

<div>
  <% if @cart_products.present? %>
    <table>
      <thead>
        <tr>
          <th>Product</th>
          <th>Quantity</th>
          <th>Price</th>
          <th>Total</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% @cart_products.each do |product| %>
          <tr>
            <td><%= product.name %></td>
            <td>
              <%= form_with url: update_cart_path(product), method: :patch do %>
                <%= hidden_field_tag(:id, product.id) %>
                <%= number_field_tag(:quantity, @cart_item_quantities[product.id], min: 1) %>
                <%= submit_tag "Update" %>
              <% end %>
            </td>
            <td><%= number_to_currency(product.price) %></td>
            <td><%= number_to_currency(product.price * @cart_item_quantities[product.id]) %></td>
            <td>
              <%= button_to delete_from_cart_path(product), method: :delete, data: { confirm: 'Are you sure?' } do %>
                Remove
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= link_to "Proceed to Checkout", new_checkout_path, class: "btn btn-primary" %>
  <% else %>
    <p>No items in the cart.</p>
  <% end %>
</div>