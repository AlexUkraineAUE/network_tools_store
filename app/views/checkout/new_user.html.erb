<h1>Enter Your Contact Details</h1>

<form method="post">
  <%= csrf_meta_tags %>
  
  <label for="user_name">Name:</label>
  <input type="text" id="user_name" name="user[name]" required>

  <label for="user_email">Email:</label>
  <input type="email" id="user_email" name="user[email]" required>

  <label for="user_phone">Phone:</label>
  <input type="text" id="user_phone" name="user[phone]" required>

  <label for="user_province">Province:</label>
  <input type="text" id="user_province" name="user[province]" required>

  <input type="submit" value="Submit">
</form>